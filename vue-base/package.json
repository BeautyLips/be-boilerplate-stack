{
  "name": "vue-base",
  "description": "Vue Boilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p ts:check \"build:only {@}\" --",
    "build:only": "vite build",
    "build:lint": "npm run lint && vite build",
    "preview": "vite preview",
    "ts:check": "vue-tsc --build --force",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test",
    "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:stylelint",
    "lint:eslint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .eslintignore",
    "lint:prettier": "prettier --write \"**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts,css,scss,less,md,json}\" --ignore-path .prettierignore",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,css,less,scss,html}\" --ignore-path .stylelintignore",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "analyze:treemap": "npx vite-bundle-visualizer",
    "analyze:sunburst": "npx vite-bundle-visualizer --template=sunburst",
    "update": "ncu --interactive --format group",
    "update:node": "volta pin node@lts",
    "settings:envinfo": "npx envinfo --system --binaries",
    "settings:executable": "node executable.config.cjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@vueuse/core": "^10.9.0",
    "lodash": "^4.17.21",
    "vue": "^3.4.27"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.5.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@storybook/addon-essentials": "^8.1.6",
    "@storybook/addon-interactions": "^8.1.6",
    "@storybook/addon-links": "^8.1.6",
    "@storybook/blocks": "^8.1.6",
    "@storybook/test": "^8.1.6",
    "@storybook/vue3": "^8.1.6",
    "@storybook/vue3-vite": "^8.1.6",
    "@playwright/test": "^1.44.1",
    "@rushstack/eslint-patch": "^1.10.3",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.17.4",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "@vue/typescript": "^1.8.20",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-vue": "^9.26.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.4",
    "npm-run-all2": "^6.2.0",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.2",
    "storybook": "^8.1.6",
    "stylelint": "^16.5.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-rational-order-fix": "^0.1.9",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.4",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-svg4vue": "^3.1.2",
    "vite-plugin-vue-devtools": "^7.2.1",
    "vitest": "^1.6.0",
    "vue-tsc": "^2.0.19"
  },
  "volta": {
    "node": "20.13.1",
    "npm": "10.5.2"
  },
  "engines": {
    "node": ">= 20",
    "npm": ">= 10"
  }
}
